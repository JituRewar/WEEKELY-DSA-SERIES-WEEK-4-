  704---
  class Solution {
public:
    int bs(vector<int>& arr, int tar,int st,int end){
        if(st<=end){
            int mid=st+(end-st)/2;
            if(arr[mid]==tar){
                return mid;
            }
            else if(arr[mid]>=tar){
              return bs(arr,tar,st,mid-1);
            }
            else{
               return bs(arr,tar,mid+1,end);
            }
        }
        return -1;
    }
    int search(vector<int>& arr, int tar) {
        int st=0,end=arr.size()-1;
       return bs(arr,tar,st,end);
     }
};

sorted array
  #include<iostream>
#include<vector>
using namespace std;
bool issorted(vector<int> arr,int n){
    if(n==0 || n==1) return true;
    return arr[n-1] >= arr[n-2] && issorted(arr,n-1);
}
int main(){
    vector<int> arr={1,2,3,9,5};
    cout<<issorted(arr,arr.size());
    return 0;

}
fibonaci
  #include<iostream>
using namespace std;
int fibnocai(int n){
    if(n==0 || n==1){
        return n;
    }
    return fibnocai(n-1) + fibnocai(n-2);
}
int main(){
    cout<<fibnocai(6)<<endl;
    return 0;
}
  
